---
layout: layout.njk
permalink: /
---

{% include "header.njk" %}

<div class="hero">
	<img class="hero-img" src="assets/img/hero.jpg" alt="">
</div>

<div class="box-grid">
	{% for item in sanityData.box %}
	<div class="grid-row">
		<div class="grid-col">
			<h2>{{ item.title }}</h2>
			<div>{{ item.body | toHtml | safe }}</div>
		</div>
		<div class="grid-col">
			<img class="bgimage" src="{{ item.image[0] | resolveImage }}" alt="">
		</div>
	</div>
	{% endfor %}
</div>

<script src="/assets/dist/js/home/scripts.js"></script>
